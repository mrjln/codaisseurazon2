<div class="well">

  <div class="row">
    <div class="col-xs-8">
      <h4><%= @product.name %></small></h4>
    </div>
    <div class="col-xs-4">


      <%= form_for @shopping_cart do |f| %>

        <%= f.label :price %><br>
        <%= f.text_field :price %>

        <%= f.label :amount %><br>
        <%= f.number_field :amount, value: 1, class: "form-control", min: 1 %>

        <%= f.hidden_field :product_id, value: @product.product_id %>

        <%= f.submit "Add to Cart", class: "btn btn-primary" %>
        
      <% end %>


    </div>

  </div>
</div>
